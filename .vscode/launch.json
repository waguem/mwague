{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: FastAPI Container Debug",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 9696
      },
      "justMyCode": false,
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}/backend",
          "remoteRoot": "/backend"
        },
        {
          "localRoot": "${workspaceFolder}/mkdi-shared",
          "remoteRoot": "/mkdi-shared"
        }
      ]
    }
  ]
}
