{
  "python.testing.pytestArgs": ["backend/tests", "mkdi-shared/tests"],
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "pylint.cwd": "${workspaceFolder}/backend",
  "pylint.ignorePatterns": ["**gen/**", "**alembic/**"],
  "files.exclude": {
    "**/.git": true,
    "**/*.pyc": { "when": "$(basename).py" },
    "**/__pycache__": true
  },
  "workbench.colorCustomizations": { "editorUnnecessaryCode.border": "#e47070" }
}
