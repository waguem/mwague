{
  "python.analysis.extraPaths": [
    "${workspaceFolder}/mkdi-shared",
    "./mkdi-shared"
  ],
  "python.analysis.exclude": [
    "${workspaceFolder}/backend/migrations",
    "${workspaceFolder}/bdd",
    "${workspaceFolder}/gen/python-client/"
  ],
  "prettier.singleQuote": false,
  "eslint.workingDirectories": ["./web", "./docs"],
  "python.testing.pytestArgs": ["backend/tests", "mkdi-shared/tests"],
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "pylint.cwd": "${workspaceFolder}/backend",
  "pylint.ignorePatterns": ["**gen/**", "**alembic/**"]
}
